#include <iostream>
using namespace std;

int main()
{
	float sum=0, num1, num2, average=0;
	
	cout << "The first number is ";
	cin >> num1;
	cout << "\nThe second number is ";
	cin >> num2;
	
	sum=num1+num2;
	average=sum/2;
	
	cout<<"\nThe sum is "<<sum;
	cout<<"\nThe average is "<<average;
	
	return 0;
}
